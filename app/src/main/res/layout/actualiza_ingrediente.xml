<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtActualizaIngrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="Ingrediente"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtActualizaCantidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="26dp" />

    <EditText
        android:id="@+id/txtActualizaCantidad"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:hint="@string/valhintCantidad"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtActualizaIngrediente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtActualizaIngrediente"
        android:layout_marginRight="49dp" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="@string/valbtnActualizar"
        app:layout_constraintEnd_toEndOf="@+id/txtActualizaIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/txtActualizaIngrediente" />
</androidx.constraintlayout.widget.ConstraintLayout>