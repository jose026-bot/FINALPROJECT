<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MenuAdministr">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:text="Hola, administrador"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <ImageButton
            android:id="@+id/imgbtnCerrarSesionAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="pasarCerrarSesionAdmi"
            app:srcCompat="@drawable/cerrarsesion" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:text="CERRAR SESIÓN"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />




            ></LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageButton
        android:id="@+id/imgbtnEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pasarEstadistica"
        android:layout_gravity="center_horizontal"

        app:srcCompat="@drawable/staticimg" />











        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="11dp"
            android:text="ESTADÍSTICAS"
            android:gravity="center_horizontal"
           />












</LinearLayout>


    </LinearLayout>











    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="9dp"
        android:text="EMPLEADO"
        app:layout_constraintStart_toStartOf="@+id/imgbtnEmpleado"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnEmpleado" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="INGREDIENTES"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnAsignarMesero"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnIngrediente" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:text="AGREGAR RECETA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnPlatillo"
        app:layout_constraintStart_toEndOf="@+id/imgbtnPlatillo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="15dp"
        android:text="ASIGNACION MESERO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnAsignarMesero" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="PLATILLO"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnPlatillo"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnPlatillo" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="STOCK"
        app:layout_constraintStart_toStartOf="@+id/imgbtnStock"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnStock" />




    <ImageButton
        android:id="@+id/imgbtnEmpleado"
        android:layout_width="91dp"
        android:layout_height="71dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:onClick="pasarEmpleado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_contacts_24" />

    <ImageButton
        android:id="@+id/imgbtnIngrediente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:onClick="pasarIngredientes"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtnAgregarRecet"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/imgbtnAgregarRecet"
        app:srcCompat="@drawable/ingrediente" />

    <ImageButton
        android:id="@+id/imgbtnAgregarRecet"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="34dp"
        android:onClick="pasarAgregarReceta"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/imgbtnEmpleado"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:srcCompat="@drawable/ic_baseline_format_list_numbered_24" />

    <ImageButton
        android:id="@+id/imgbtnAsignarMesero"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="135dp"
        android:onClick="pasarAsignacionMesaAdmi"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnPlatillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtnAgregarRecet"
        app:srcCompat="@drawable/recetario" />

    <ImageButton
        android:id="@+id/imgbtnPlatillo"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="135dp"
        android:onClick="pasarPlatillo"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnStock"
        app:layout_constraintStart_toEndOf="@+id/imgbtnAsignarMesero"
        app:layout_constraintTop_toTopOf="@+id/imgbtnIngrediente"
        app:srcCompat="@drawable/plato" />

    <ImageButton
        android:id="@+id/imgbtnStock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:onClick="pasarStock"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtnPlatillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtnPlatillo"
        app:layout_constraintTop_toTopOf="@+id/imgbtnPlatillo"
        app:srcCompat="@drawable/asignar" />

</LinearLayout>